<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Canvas Draw LITE"
    android:textSize="20dp"
    android:textAlignment="center"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size" />

        <SeekBar
            android:id="@+id/skbrSize"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.87"
            android:max="300" />

        <Button
            android:id="@+id/btnCircle"
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:background="?android:attr/listChoiceIndicatorSingle"
            android:onClick="OnBtnClick" />

        <Button
            android:id="@+id/btnSquare"
            android:layout_width="47dp"
            android:layout_height="wrap_content"
            android:background="?android:attr/listChoiceIndicatorMultiple"
            android:onClick="OnBtnClick"
            android:layout_weight="0.05" />

        <Button
            android:id="@+id/btnColorPicker"
            android:layout_width="55dp"
            android:layout_height="59dp"
            android:layout_weight="0.07"
            android:background="@drawable/editpaints2"
            android:onClick="OnBtnClick" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/x1right"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:background="@drawable/arrowright"
            android:onClick="OnNavigationClick" />

        <Button
            android:id="@+id/y1up"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:background="@drawable/arrowup"
            android:onClick="OnNavigationClick" />

        <Button
            android:id="@+id/y1down"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_weight="0.26"
            android:background="@drawable/arrowdown"
            android:onClick="OnNavigationClick" />

        <Button
            android:id="@+id/x1left"
            android:layout_width="39dp"
            android:layout_height="match_parent"
            android:background="@drawable/arrowleft"
            android:onClick="OnNavigationClick" />

        <LinearLayout
            android:layout_width="49dp"
            android:layout_height="match_parent"
            android:layout_weight="0.18"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="29dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnRedo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rotateright"
                    android:onClick="OnBtnClick" />

                <Button
                    android:id="@+id/btnUndo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rotateleft"
                    android:onClick="OnBtnClick" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnPlus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/plusicon"
                    android:onClick="OnNavigationClick" />

                <Button
                    android:id="@+id/btnMinus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/minusicon"
                    android:onClick="OnNavigationClick" />

            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/x2right"
            android:layout_width="39dp"
            android:layout_height="match_parent"
            android:layout_weight="0.03"
            android:background="@drawable/arrowright"
            android:onClick="OnNavigationClick" />

        <Button
            android:id="@+id/y2down"
            android:layout_width="35dp"
            android:layout_height="match_parent"
            android:layout_weight="0.22"
            android:background="@drawable/arrowdown"
            android:onClick="OnNavigationClick" />

        <Button
            android:id="@+id/y2up"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_weight="0.32"
            android:background="@drawable/arrowup"
            android:onClick="OnNavigationClick" />

        <Button
            android:id="@+id/x2left"
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_weight="0.58"
            android:background="@drawable/arrowleft"
            android:onClick="OnNavigationClick" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/btnClear"
            android:onClick="OnBtnClick"
            android:text="Save" />

        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignTop="@+id/btnSave"
            android:onClick="OnBtnClick"
            android:text="Clear" />

        <Button
            android:id="@+id/btnSelect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="OnBtnClick"
            android:text="Select (0-selected)" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/drawer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="horizontal">

        </LinearLayout>

    </LinearLayout>

</LinearLayout>